{
  "name": "cra-template-react-ts-tw",
  "version": "1.0.1",
  "description": "",
  "main": "template.json",
  "scripts": {
    "postinstall": "husky install && npx husky add .husky/pre-commit \"npx lint-staged\"",
    "husky:prepare": "husky install && npx husky add .husky/pre-commit \"npx lint-staged\"",
    "lint": "eslint .",
    "lint:fix": "eslint --fix",
    "format": "prettier --write \"./**/*.{js,ts,tsx,css,md,json}\" --config ./.prettierrc"
  },
  "author": "amirfakhrullah",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/amirfakhrullah/cra-template-react-ts-tw"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.30.0",
    "husky": "^8.0.1",
    "prettier": "^2.6.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./**/*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
